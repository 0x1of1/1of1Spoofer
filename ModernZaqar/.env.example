# 1of1Spoofer Configuration
# Make a copy of this file named .env and update the settings

# General Settings
APP_NAME="1of1Spoofer"
APP_VERSION="1.0.0"
DEBUG_MODE=false
TIMEZONE="UTC"

# Email Settings
# Options: mail, smtp, sendgrid, mailgun
SEND_METHOD=smtp

# SMTP Configuration
SMTP_HOST=smtp.crystalart.in
SMTP_PORT=587
SMTP_USERNAME=manish@crystalart.in
SMTP_PASSWORD=champions1
SMTP_ENCRYPTION=tls

# SendGrid Configuration
SENDGRID_API_KEY=your_sendgrid_key

# Mailgun Configuration
MAILGUN_API_KEY=your_mailgun_key
MAILGUN_DOMAIN=your_mailgun_domain

# Security Settings
CSRF_PROTECTION=true
RATE_LIMIT_EMAILS=10
RATE_LIMIT_WINDOW=3600

# UI Settings
DEFAULT_THEME=dark
RICH_TEXT_EDITOR=true 